<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/items_msg_txt"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/hint_items_msg"
        android:maxLines="1412"

        android:singleLine="false" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/items_msg_share_btn"
            style="@style/ItemsMsgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#F44336"


            android:text="@string/btn_share_items_msg" />

        <com.gc.materialdesign.views.ButtonRectangle
            android:id="@+id/items_msg_copy_btn"
            style="@style/ItemsMsgBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFF"

            android:text="@string/btn_copy_items_msg" />


    </LinearLayout>
</LinearLayout>