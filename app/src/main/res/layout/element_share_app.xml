<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/share_app_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingBottom="@dimen/share_apps_vertical_spacing"
    android:paddingLeft="@dimen/share_apps_horizontal_spacing"
    android:paddingRight="@dimen/share_apps_horizontal_spacing"
    android:paddingTop="@dimen/share_apps_vertical_spacing">


    <ImageView
        android:id="@+id/share_app_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:contentDescription="@string/desc_share_app_image" />

    <TextView
        android:id="@+id/share_app_name"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:singleLine="true"
        android:text="test"

        android:textSize="16sp"

        />


</FrameLayout>